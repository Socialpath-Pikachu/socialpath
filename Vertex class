package Socialpath;

public class Vertex {
    int vertexInfo;
    int indeg;
    int outdeg;
    double rep;
    Vertex nextVertex;
    Edge firstEdge;

    public Vertex() {
        vertexInfo = 0;
        indeg = 0;
        outdeg = 0;
        rep = 0;
        nextVertex = null;
        firstEdge = null;
    }

    public Vertex(int vInfo, Vertex next) {
        vertexInfo = vInfo;
        indeg = 0;
        outdeg = 0;
        rep = 0;
        nextVertex = next;
        firstEdge = null;
    }
}
