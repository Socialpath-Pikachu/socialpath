package Socialpath;

public class Vertex {
    String vertexInfo;
    int indeg;
    int outdeg;
    double rep;
    Vertex nextVertex;
    Edge firstEdge;

    public Vertex() {
        vertexInfo = null;
        indeg = 0;
        outdeg = 0;
        rep = 0;
        nextVertex = null;
        firstEdge = null;
    }

    public Vertex(String vInfo, Vertex next) {
        vertexInfo = vInfo;
        indeg = 0;
        outdeg = 0;
        rep = 0;
        nextVertex = next;
        firstEdge = null;
    }
}
