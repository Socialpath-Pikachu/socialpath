public class Vertex {
    String vertexInfo;
    int dive;
    int lunchStart;
    int lunchPeriod;
    int indeg;
    int outdeg;
    double rep;
    Vertex nextVertex;
    Edge firstEdge;

    public Vertex() {
        vertexInfo = null;
        lunchStart=0;
        lunchPeriod=0;
        dive=0;
        indeg = 0;
        outdeg = 0;
        rep = 0;
        nextVertex = null;
        firstEdge = null;
    }

    public Vertex(String vInfo, Vertex next) {
        vertexInfo = vInfo;
        indeg = 0;
        outdeg = 0;
        rep = 0;
        nextVertex = next;
        firstEdge = null;
    }

    public Vertex(String vertexInfo, int dive, int lunchStart, int lunchPeriod, Vertex nextVertex) {
        this.vertexInfo = vertexInfo;
        this.dive = dive;
        this.lunchStart = lunchStart;
        this.lunchPeriod = lunchPeriod;
        this.nextVertex = nextVertex;
        indeg = 0;
        outdeg = 0;
        rep = 0;
        firstEdge = null;
    }

}
